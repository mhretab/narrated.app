{
  "name": "Bun",
  "image": "mcr.microsoft.com/devcontainers/typescript-node",
  "features": {
    "ghcr.io/devcontainer-community/devcontainer-features/bun.sh:1": {},
    "ghcr.io/devcontainer-community/devcontainer-features/starship.rs:latest": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "roocode.roocode",
        "file-icons.file-icons",
        "whizkydee.material-palenight-theme",
        "ms-vsliveshare.vsliveshare",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "telemetry.enableTelemetry": false,
        "telemetry.enableCrashReporter": false,
        "workbench.iconTheme": "file-icons",
        "workbench.colorTheme": "Palenight Operator",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.fontLigatures": true,
        "editor.tabSize": 2,
        "editor.fontFamily": "Cascadia Code, Fira Code, Menlo, Monaco, 'Courier New', monospace",
        "editor.formatOnSave": true,
        "prettier.printWidth": 100,
        "prettier.singleQuote": true,
        "explorer.confirmDragAndDrop": false,
        "explorer.confirmDelete": false,
        "explorer.fileNesting.enabled": true,
        "explorer.fileNesting.patterns": {
          "*.ts": "${capture}.js, ${capture}.typegen.ts",
          "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
          "*.jsx": "${capture}.js",
          "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
          "tsconfig.json": "tsconfig.*.json",
          "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
          "*.mts": "${capture}.typegen.ts",
          "*.cts": "${capture}.typegen.ts"
        },
        "eslint.packageManager": "bun",
        "editor.multiCursorModifier": "ctrlCmd",
        "editor.multiCursorLimit": 25000
      }
    }
  },
  "postCreateCommand": "bun install",
  "remoteUser": "node"
}
